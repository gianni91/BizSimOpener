<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jjob2.bizsimopener.Funding_Select">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Initial Funding"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bootstrap"
        android:id="@+id/button_bootstrap"
        android:onClick="bootstrapHandler"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Savings   "
        android:onClick="savingsHandler"
        android:id="@+id/button_savings"
        android:layout_below="@+id/button_bootstrap"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Loan       "
        android:onClick="loanHandler"
        android:id="@+id/button_loan"
        android:layout_below="@+id/button_savings"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Private Equity"
        android:id="@+id/button_private"
        android:layout_below="@+id/button_loan"
        android:onClick="nextButtonHandler"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
